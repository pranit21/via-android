<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fd.fileuploaddemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".SingletonApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".filepicker.FilePickerActivity" />
        <activity
            android:name=".SingleUploadActivity"
            android:label="@string/title_activity_single_upload"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MultipleUploadActivity"
            android:label="@string/title_activity_multiple_upload"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FileUploadActivity"
            android:label="@string/title_activity_binary_upload"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>