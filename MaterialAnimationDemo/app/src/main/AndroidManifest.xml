    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TransitionActivity1"
            android:label="@string/title_activity_transition1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TransitionActivity2"
            android:label="@string/title_activity_transition2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TransitionActivity3"
            android:label="@string/title_activity_transition3"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SharedElementActivity" />
        <activity android:name=".AnimationsActivity1" />
        <activity android:name=".AnimationsActivity2" />
        <activity android:name=".RevealActivity"></activity>
    </application>

</manifest>
